doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    title #{title}
    
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/idle.css')
  body
    .header
      .row
        .col-xs-10
          h1 #{device.food.name}
        .col-xs-2
          h3 #{sprintf('%1.0f', device.food.energy)} kcal / 100g
    .container
      br
      .row
        .col-xs-6
          .row
            .col-xs-4
              h3 Protein:
            .col-xs-8
              h3 #{sprintf('%0.2f', device.food.protein)} g
          .row
            .col-xs-4
              h3 Fat:
            .col-xs-8
              h3  #{sprintf('%0.2f', device.food.fat)} g
          .row
            .col-xs-4
              h3 Sat.fat:
            .col-xs-8
              h3 #{sprintf('%0.2f', device.food.saturatedFat)} g
        .col-xs-6
          .row
            .col-xs-4
              h3 Fiber:
            .col-xs-8
              h3 #{sprintf('%0.2f', device.food.fiber)} g
          .row
            .col-xs-4
              h3 Carbs:
            .col-xs-8
              h3 #{sprintf('%0.2f', device.food.carbohydrate)} g