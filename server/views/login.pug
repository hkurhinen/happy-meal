extends layout

block view_styles
  link(rel='stylesheet', href='/css/login.css')
block content
  div(class='panel panel-default')
    div(class='panel-heading') 
      h1 
        span(class='glyphicon glyphicon-log-in')
        | &nbsp;Login
    div(class='panel-body')
      form(role='form', action='/login', method='post')
        div(class='form-group')
          label(for='usernameInputField') Username
          div(class='input-group')
            span(class='input-group-addon glyphicon glyphicon-user')
            input(name='username' type='text', class='form-control', id='usernameInputField', placeholder='')
        div(class='form-group')
          label(for='passwordInputField') Password
          div(class='input-group')
            span(class='input-group-addon glyphicon glyphicon-lock')
            input(name='password', type='password', class='form-control', id='passwordInputField', placeholder='')
        button(class='btn btn-warning btn-lg') Login 
    a(href='/register', style='margin:10px; padding-bottom:10px;')
      small Register
  if message.length > 0
    div(class='alert alert-danger') #{message}